
<div id="particles-js"></div> 

{{> navBarOut}}

<div class="formPage">
        <form class="contact-form" action="/contacto" method="POST">
            <h1>Contactame</h1>
            <!-- Nombre -->
            <input type="text" name="name" placeholder="Nombre" title="El nombre solo acepta letras y espacios en blanco" pattern="^[A-Za-zÑñÁáÉéÍíÓóÚúÜü\s]+$" required>
            <!-- Apellido -->
            <input type="text" name="lastname" placeholder="Apellido" title="El apellido solo acepta letras y espacios en blanco" pattern="^[A-Za-zÑñÁáÉéÍíÓóÚúÜü\s]+$" required>
            <!-- Email -->
            <input type="email" name="email" placeholder="Ingrese su Email" required pattern="^[a-z0-9]+(\.[_a-z0-9]+)*@[a-z0-9-]+(\.[a-z0-9-]+)*(\.[a-z]{2,15})$" title="Ingrese un correo valido">
            <!-- Asunto -->
            <input type="text" name="subject" placeholder="Asunto" required title="El Asunto es Requerido">
            <!-- Msj -->
            <textarea name="comments" cols="30" rows="10" placeholder="Escribe tus comentarios" data-pattern="^.{1,255}$" required title="Tu comentario no debe ser mayor a 250 Caracteres"></textarea>
            <!-- Enviar -->
            <input type="submit" value="Enviar">
    </form>
    <div class="formRes">
        {{#if message}}
            <p> {{message}} </p>
        {{/if}}
    </div>
</div>

<script src="/javascripts/validForm.js"></script>